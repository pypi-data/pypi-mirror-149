<?xml version="1.0"?>
<object name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="jazkarta.shop">

    <configlet
        title="Jazkarta Shop Settings"
        action_id="jazkarta.shop.settings"
        appId="jazkarta.shop"
        category="Products"
        condition_expr=""
        url_expr="string:${object/@@plone_portal_state/navigation_root_url}/@@jazkarta-shop-settings"
        icon_expr=""
        visible="True"
        i18n:attributes="title">
        <permission>jazkarta.shop: Manage shop</permission>
    </configlet>

    <configlet
        title="Jazkarta Shop Shipping Methods"
        action_id="jazkarta.shop.shipping-methods"
